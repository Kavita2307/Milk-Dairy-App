generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model Animal {
  id           Int      @id @default(autoincrement())
  animalNumber String
  userId       Int
  groupId      Int
  details      Json?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user  User  @relation(fields: [userId], references: [id])
}

model Ration {
  id Int @id @default(autoincrement())

  groupId Int
  userId  Int

  user  User  @relation(fields: [userId], references: [id])

  name       String
  no         Int
  kg         Float
  total      Float
  thisLoad   Float
  lastLoad   Float
  diff       Float
  rationSize Float
  days       Int

  createdAt DateTime @default(now())
}

model Leftover {
  id Int @id @default(autoincrement())

  groupId    Int
  date       DateTime @default(now())
  leftoverKg Float
  userId Int

}

model Milk {
  id Int @id @default(autoincrement())

  groupId      Int
  shift        String // morning / afternoon / evening
  milkLit      Float
  animalNumber String
  date         DateTime @default(now())
userId Int

}

model Ingredient {
  id Int @id @default(autoincrement())

  name String @unique        // Feed, Silage, Wheat straw
  details Json?              // price, dryMatter etc.
  currentStock Float @default(0) // Available stock (kg)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId Int
  user   User @relation(fields: [userId], references: [id])

  stockEntries StockEntry[]
  consumptions Consumption[]
}

model StockEntry {
  id Int @id @default(autoincrement())
user Int
  ingredientId Int
  quantity Float        // kg
  note String?

  createdAt DateTime @default(now())

  ingredient Ingredient @relation(fields: [ingredientId], references: [id])
}

model Consumption {
  id  Int @id @default(autoincrement())
  groupId Int
  ingredientId Int
  quantity Float        // kg used
  note String?

  createdAt DateTime @default(now())

  ingredient { name, details }
}

model User {
  id       Int     @id @default(autoincrement())
  name     String
  mobile   String  @unique
  email    String? @unique 
  password  String 
  createdAt DateTime @default(now())
  role     Role   @default(farmer)
  address   String?   
  pincode   String? 
  animals     Animal[]
  Ration      Ration[]
  ingredients Ingredient[]
}
enum Role {
  farmer
  admin
}