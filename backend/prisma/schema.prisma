generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Group {
  id       Int        @id @default(autoincrement())
  name     String
  type     String // "milking" / "non-milking"
  userId   Int
  user     User       @relation(fields: [userId], references: [id])
  animals  Animal[]
  rations  Ration[]
  leftover Leftover[]
  milks    Milk[]
}

model Animal {
  id           Int      @id @default(autoincrement())
  animalNumber String
  userId       Int
  groupId      Int
  details      Json?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  user         User     @relation(fields: [userId], references: [id])
  group        Group    @relation(fields: [groupId], references: [id])
}

model Ration {
  id       Int      @id @default(autoincrement())
  groupId  Int
  date     DateTime @default(now())
  rationKg Float

  group Group @relation(fields: [groupId], references: [id])
}

model Leftover {
  id         Int      @id @default(autoincrement())
  groupId    Int
  date       DateTime @default(now())
  leftoverKg Float

  group Group @relation(fields: [groupId], references: [id])
}

model Milk {
  id      Int      @id @default(autoincrement())
  groupId Int
  shift   String // morning / afternoon / evening
  milkLit Float
  date    DateTime @default(now())

  group Group @relation(fields: [groupId], references: [id])
}

model Ingredient {
  id           Int       @id @default(autoincrement())
  name         String    @unique
  details      Json?     // free-form: { pricePerKg, dryMatterPct, other }
  currentStock Float     @default(0) // in kg
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  stockEntries StockEntry[]
  consumptions Consumption[]
}

model StockEntry {
  id           Int      @id @default(autoincrement())
  ingredientId Int
  quantity     Float    // kg added (positive)
  note         String?
  createdAt    DateTime @default(now())

  ingredient Ingredient @relation(fields: [ingredientId], references: [id])
}

model Consumption {
  id           Int      @id @default(autoincrement())
  ingredientId Int
  quantity     Float    // kg consumed (positive)
  note         String?
  createdAt    DateTime @default(now())

  ingredient Ingredient @relation(fields: [ingredientId], references: [id])
}


model User {
  id       Int      @id @default(autoincrement())
  name     String?
  email    String   @unique
  password String
  animals  Animal[]
  groups   Group[]
}
