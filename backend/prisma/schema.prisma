generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Group {
  id   Int    @id @default(autoincrement())
  name String
  type String // "milking" / "non-milking"

  userId Int
  user   User @relation(fields: [userId], references: [id])

  animals     Animal[]
  rations     Ration[]     @relation("GroupRations")
  leftover    Leftover[]
  milks       Milk[]
  ingredients Ingredient[] // <-- Group has many ingredients
}

model Animal {
  id           Int      @id @default(autoincrement())
  animalNumber String
  userId       Int
  groupId      Int
  details      Json?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user  User  @relation(fields: [userId], references: [id])
  group Group @relation(fields: [groupId], references: [id])
}

model Ration {
  id Int @id @default(autoincrement())

  groupId Int
  userId  Int

  group Group @relation("GroupRations", fields: [groupId], references: [id])
  user  User  @relation(fields: [userId], references: [id])

  name       String
  no         Int
  kg         Float
  total      Float
  thisLoad   Float
  lastLoad   Float
  diff       Float
  rationSize Float
  days       Int

  createdAt DateTime @default(now())
}

model Leftover {
  id Int @id @default(autoincrement())

  groupId    Int
  date       DateTime @default(now())
  leftoverKg Float

  group Group @relation(fields: [groupId], references: [id])
}

model Milk {
  id Int @id @default(autoincrement())

  groupId Int
  shift   String // morning / afternoon / evening
  milkLit Float
  animalNumber String
  date    DateTime @default(now())

  group Group @relation(fields: [groupId], references: [id])
}

model Ingredient {
  id Int @id @default(autoincrement())

  name         String @unique
  details      Json?
  currentStock Float  @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  groupId Int
  group   Group @relation(fields: [groupId], references: [id])

  stockEntries StockEntry[]
  consumptions Consumption[]
}

model StockEntry {
  id           Int      @id @default(autoincrement())
  ingredientId Int
  quantity     Float
  note         String?
  createdAt    DateTime @default(now())

  ingredient Ingredient @relation(fields: [ingredientId], references: [id])
}

model Consumption {
  id           Int      @id @default(autoincrement())
  ingredientId Int
  quantity     Float
  note         String?
  createdAt    DateTime @default(now())

  ingredient Ingredient @relation(fields: [ingredientId], references: [id])
}

model User {
  id       Int     @id @default(autoincrement())
  name     String?
  email    String  @unique
  password String

  animals Animal[]
  groups  Group[]
  Ration  Ration[]
}
